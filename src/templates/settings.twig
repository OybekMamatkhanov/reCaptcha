{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("recaptcha\\recaptcha\\assetbundles\\recaptcha\\RecaptchaAsset") %}

{{forms.textfield({
    id: 'siteKey',
    name: 'siteKey',
    value: settings['siteKey'],
    label: 'Site Key',
    size: 30
})}}

{{forms.textfield({
    id: 'secretKey',
    name: 'secretKey',
    value: settings['secretKey'],
    label: 'Secret Key',
    size: 30
})}}
